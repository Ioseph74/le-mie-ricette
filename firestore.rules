rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Recipes: anyone can read, only authenticated users can create/update/delete their own
    match /ricette/{ricettaId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.autore;
    }

    // Comments: anyone can read, authenticated users can create, only author can delete
    match /commenti/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.autoreUid;
    }

    // Favorites: authenticated users can manage their own
    match /preferiti/{docId} {
      allow read: if true;
      allow create, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null;
    }

    // Following: authenticated users can manage their own
    match /seguiti/{docId} {
      allow read: if true;
      allow create, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null;
    }

    // User Preferences: each user can read/write only their own preferences
    match /userPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
